{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es2015", "es2017", "dom"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules/"
    ]
}